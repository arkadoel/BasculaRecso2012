<Window x:Class="project.recso.bascula.wpf.controls.inputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" Topmost="true" 
    Height="151"
    Width="426"
    MinHeight="10"
    MinWidth="300"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid>

        <!-- Accept or Cancel -->
        
            <Button Name="okButton" Click="okButton_Click" IsDefault="True" HorizontalAlignment="Right" Width="105" Height="26" VerticalAlignment="Bottom" Margin="0,0,115,0">Aceptar</Button>
            <Button Name="cancelButton" IsCancel="True" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="105" Click="cancelButton_Click">Cancelar</Button>
        <TextBox Height="29" HorizontalAlignment="Left" Margin="8,36,0,0" Name="txtInput" VerticalAlignment="Top" Width="387" />
        <Label Content="" Height="28" HorizontalAlignment="Left" Margin="7,7,0,0" Name="lblTexto" VerticalAlignment="Top" Width="388" />
    </Grid>
</Window>
