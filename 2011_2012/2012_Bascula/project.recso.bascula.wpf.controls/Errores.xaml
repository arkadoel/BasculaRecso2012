<Window x:Class="project.recso.bascula.wpf.controls.Errores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Errores" Height="500" Width="700" Background="Gainsboro">
    <Grid>
        <Label Content="Se ha producido un error en la aplicacion, por favor, detalle lo que estaba haciendo" Height="28" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" Width="666" />
        <TextBox TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="87" Margin="12,34,12,0" Name="txtDescripcion" VerticalAlignment="Top" />
        <Label Content="Detalle del error:" Height="28" HorizontalAlignment="Left" Margin="12,127,0,0" Name="label2" VerticalAlignment="Top" Width="666" />
        <TextBox Margin="12,161,12,59" Name="txtdetalle" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>
